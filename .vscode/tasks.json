{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "chat_server.exe",
                "chat_server.c",
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "chat_client.exe",
                "chat_client.c",
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
